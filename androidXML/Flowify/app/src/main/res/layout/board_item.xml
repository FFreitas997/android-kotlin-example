<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="@dimen/regular_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/small_padding">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/board_image"
            android:layout_width="@dimen/recycler_view_board_item_image_size"
            android:layout_height="@dimen/recycler_view_board_item_image_size"
            android:contentDescription="@string/board_image"
            android:scaleType="centerCrop"
            android:src="@drawable/default_board"
            app:shapeAppearanceOverlay="@style/Circular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/board_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recycler_view_board_item_name_size"
                android:textStyle="bold"
                tools:text="Default Board"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/board_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recycler_view_board_item_date_size"
                tools:text="29/10/2020 15:30:00"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>